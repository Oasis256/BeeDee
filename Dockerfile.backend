# Backend API Dockerfile
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (backend only needs production dependencies)
RUN npm ci --omit=dev --prefer-offline --no-audit --loglevel=error --no-fund

# Copy source code
COPY . .

# Create data directory
RUN mkdir -p /app/data

# Expose port
EXPOSE 3001

# Start the backend server
CMD ["node", "server.js"]
